<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" stylesheets="@styles.css" vgap="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Student ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="studentIdField" onKeyReleased="#validateStudentId" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Semester 1 Average:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="semester1Field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Semester 2 Average:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="semester2Field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Semester 3 Average:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="semester3Field" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Semester 4 Average:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="semester4Field" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label fx:id="validationMessage" style="-fx-text-fill: red;" text="" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <HBox alignment="TOP_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="8">
        <Button onAction="#handleCancel" styleClass="secondary-button" text="Cancel" />
        <Button onAction="#handleSubmit" text="Submit" />
    </HBox>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
