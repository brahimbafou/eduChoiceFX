<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>

<VBox xmlns:fx="http://javafx.com/fxml" stylesheets="@styles.css" spacing="10" fx:controller="com.university.ui.ChoicesController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Choices Management">
            <font>
                <Font name="Cairo ExtraBold" size="20.0" />
            </font>
        </Label>
        <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#handleAddChoice" text="Add New">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <TableView fx:id="choiceTableView" VBox.vgrow="ALWAYS">
        <columns>
            <!-- Choice ID Column -->
            <TableColumn fx:id="choiceIdColumn" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="choiceId" />
                </cellValueFactory>
            </TableColumn>

            <!-- Student Name Column -->
            <TableColumn fx:id="studentNameColumn" text="Student">
                <cellValueFactory>
                    <PropertyValueFactory property="student.fullName" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="studentIdColumn" text="Student ID">
                <cellValueFactory>
                    <PropertyValueFactory property="student.id" />
                </cellValueFactory>
            </TableColumn>


            <!-- Specialty Column -->
            <TableColumn fx:id="specialtyColumn" text="Specialty">
                <cellValueFactory>
                    <PropertyValueFactory property="specialty.specialtyName" />
                </cellValueFactory>
            </TableColumn>

            <!-- Choice Order Column -->
            <TableColumn fx:id="choiceOrderColumn" text="Order">
                <cellValueFactory>
                    <PropertyValueFactory property="choiceOrder" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="actionCol" prefWidth="120.0" resizable="false" />
        </columns>
    </TableView>
</VBox>
